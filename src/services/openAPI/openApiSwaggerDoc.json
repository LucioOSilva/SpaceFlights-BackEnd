          "newsSite": {
            "type": "string",
            "example": "Lorem ipsum dolor sit amet, consectetur adip..."
          },
          "summary": {
            "type": "string",
            "example": "Lorem ipsum dolor. Donec consequat maximus..."
          },
          "launches": {
            "type": "array",
            "items": {
              "type": "object"
            }
          },
          "events": {
            "type": "array",
            "items": {
              "type": "object"
