          "message": {
            "type": "string",
            "example": null
          },
          "data": {
            "type": "object",
            "$ref": "#/components/schemas/articleId"
          }
        }
      },
      "articleId": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64",
            "example": "13454"
          }
        }
      },
      "articleBoolean": {
        "type": "object",
        "properties": {
          "id": {
