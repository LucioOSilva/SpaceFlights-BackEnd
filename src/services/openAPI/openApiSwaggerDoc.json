          }
        }
      },
      "articlesList": {
        "type": "object",
        "properties": {
          "status": {
            "type": "integer",
            "format": "int64",
            "example": "200"
          },
          "message": {
            "type": "string",
            "example": null
          },
          "data": {
            "type": "object",
            "properties": {
              "articles": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/article"
                }
