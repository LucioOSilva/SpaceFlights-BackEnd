{
  "openapi": "3.0.0",
  "servers": [
    {
      "description": "Coodesh test - SpaceFlightsAPI",
      "url": "http://localhost:3333"
    }
  ],
  "info": {
    "description": "This is a simple API",
    "version": "1.0.0",
    "title": "Simple Inventory API",
    "contact": {
      "email": "lucioosilva00@gmail.com"
